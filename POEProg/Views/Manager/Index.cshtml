@model List<POEProg.Models.Claim>

@{
    ViewData["Title"] = "Manager Dashboard - Verified Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Verified Claims</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No verified claims available for approval.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Lecturer</th>
                        <th>Hours Worked</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Notes</th>
                        <th>Status</th>
                        <th>Submitted At</th>
                        <th>Documents</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C")</td>
                            <td>@claim.Total.ToString("C")</td>
                            <td>@claim.Notes</td>
                            <td>
                                @switch (claim.Status)
                                {
                                    case POEProg.Models.ClaimStatus.Pending:
                                        <span class="badge bg-warning text-dark">Pending</span>
                                        break;
                                    case POEProg.Models.ClaimStatus.Verified:
                                        <span class="badge bg-info text-dark">Verified</span>
                                        break;
                                    case POEProg.Models.ClaimStatus.Approved:
                                        <span class="badge bg-success text-dark">Approved</span>
                                        break;
                                    case POEProg.Models.ClaimStatus.Rejected:
                                        <span class="badge bg-danger text-dark">Declined</span>
                                        break;
                                }
                            </td>
                            <td>@claim.DateSubmitted.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (claim.Documents != null && claim.Documents.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var doc in claim.Documents)
                                        {
                                            <li>
                                                <a href="@Url.Action("DownloadDocument", "Claim", new { encryptedName = doc.EncryptedName, originalName = doc.FileName })" target="_blank">
                                                    <i class="bi bi-file-earmark-text me-1"></i>@doc.FileName
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted">No documents</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-flex flex-column gap-2">
                                    <a class="btn btn-sm btn-success" href="@Url.Action("Approve", "Manager", new { id = claim.Id })">Approve</a>
                                    <a class="btn btn-sm btn-danger" href="@Url.Action("Reject", "Manager", new { id = claim.Id })">Reject</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>