@model List<POEProg.Models.User>

@{
    ViewData["Title"] = "HR Dashboard - Users";
}

<div class="container mt-4">
    <h2>Users</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <a asp-action="Create" class="btn btn-primary mb-3">+ Add User</a>
    <a asp-action="GeneratePDF" class="btn btn-secondary mb-3 ms-2">Download PDF Report</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Rate</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Surname</td>
                    <td>@user.Email</td>
                    <td>@user.HourlyRate.ToString("C")</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
