@model IEnumerable<POEProg.Models.Document>

@{
    ViewData["Title"] = "Documents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Documents</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Upload New Document</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().FileName)</th>
            <th>Claim</th>
            <th>Size</th>
            <th>Uploaded At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.FileName</td>
                <td>@doc.Claim?.LecturerName</td>
                <td>@(doc.Size / 1024.0):F2 KB</td>
                <td>@doc.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Download" asp-route-id="@doc.Id" class="btn btn-sm btn-success">Download</a>
                    <a asp-action="Delete" asp-route-id="@doc.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
