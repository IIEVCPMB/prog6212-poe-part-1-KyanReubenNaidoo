@model List<POEProg.Models.Claim>
@{
    ViewBag.Title = "My Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Claims</h2>
    <a href="/Claim/SubmitClaim" class="btn btn-primary"> + Submit New Claim </a>
</div>

<div class="card">
    <div class="card-body">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <p class="text-muted">No claims submitted yet.</p>
                <a href="/Claim/SubmitClaim" class="btn btn-primary">Submit Your First Claim</a>
            </div>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Lecturer</th>
                        <th>Hours</th>
                        <th>HourlyRate</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Documents</th>
                        <th>Submitted At</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.Id</td>
                            <td>@claim.LecturerName</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate</td>
                            <td>@claim.Total</td>
                            <td>
                                @switch (claim.Status)
                                {
                                    case POEProg.Models.ClaimStatus.Pending:
                                        <span class="badge bg-warning text-dark">Pending</span>
                                        ;
                                        break;
                                    case POEProg.Models.ClaimStatus.Verified:
                                        <span class="badge bg-warning text-dark">Verified</span>
                                        ;
                                        break;
                                    case POEProg.Models.ClaimStatus.Approved:
                                        <span class="badge bg-success">Approved</span>
                                        ;
                                        break;
                                    case POEProg.Models.ClaimStatus.Rejected:
                                        <span class="badge bg-danger">Rejected</span>
                                        ;
                                        break;
                                }
                            </td>
                            <td>
                                @foreach (var doc in claim.Documents)
                                {
                                    <a href="@Url.Action("DownloadDocument", "Claim", new { encryptedName = doc.EncryptedName, originalName = doc.FileName })" target="_blank">
                                        @doc.FileName
                                    </a>

                                    <br />
                                }
                            </td>
                            <td>@claim.DateSubmitted.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>