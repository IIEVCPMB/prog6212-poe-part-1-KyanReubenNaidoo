@model POEProg.Models.Claim

@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-5" style="max-width:650px;">
    <h2 class="mb-4">Submit Claim</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="HoursWorked" class="form-label"></label>
            <input asp-for="HoursWorked" class="form-control" type="number" step="0.1" id="hours" />
            <span asp-validation-for="HoursWorked" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HourlyRate" class="form-label"></label>
            <input asp-for="HourlyRate" class="form-control" readonly id="rate" />
        </div>

        <div class="mb-3">
            <label>Total</label>
            <input type="text" class="form-control" id="total" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Attach Supporting Document</label>
            <input type="file" name="uploadedFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success w-100">Submit Claim</button>
        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Back</a>
    </form>
</div>

@section Scripts {
    <script>
        // Auto calculate total
        const hoursInput = document.getElementById("hours");
        const rateInput = document.getElementById("rate");
        const totalInput = document.getElementById("total");

        // Get rate from session (rendered by controller)
        rateInput.value = "@Model.HourlyRate";

        hoursInput.addEventListener("input", () => {
            const hours = parseFloat(hoursInput.value) || 0;
            const rate = parseFloat(rateInput.value) || 0;
            totalInput.value = (hours * rate).toFixed(2);
        });
    </script>
}
